      .tabla-prestamos-body {
        display: block;
        grid-template-columns: none;
        gap: 0;
      }

      /* Ocultar la columna de features lateral */
      .tabla-prestamos-features {
        display: none;
      }

      /* Cambiar row-wrapper para mostrar tarjetas verticales */
      .tabla-prestamos-row-wrapper {
        padding: 0;
      }

      /* Cada fila se convierte en una tarjeta con su propia característica */
      .tabla-prestamos-row {
        display: block;
        background-color: #badcc1;
        border-radius: 12px;
        padding: 16px;
        margin-bottom: 16px;
        box-shadow: inset 0px 3px 6px #00000029;
        position: relative;
      }

      /* Título de la característica dentro de cada tarjeta */
      .tabla-prestamos-row::before {
        content: attr(data-feature);
        display: block;
        font-size: 1.1rem;
        font-weight: 600;
        color: #00a14a;
        margin-bottom: 14px;
        text-align: left;
        padding-bottom: 8px;
        border-bottom: 1px solid rgba(0, 161, 74, 0.2);
      }

