      margin: 0 auto;
      background-color: #fff;
      padding: 20px;
      border-radius: 16px;
    }
    /* Header separado con shadow */
    .tabla-prestamos-header {
      background-color: #00a14a;
      border-radius: 16px;
      box-shadow: 0px 3px 6px #00000029;
      padding: 10px;
      display: grid;
      grid-template-columns: 4fr 4fr 4fr;
      margin-bottom: 16px;
    }
    .tabla-prestamos-header div {
