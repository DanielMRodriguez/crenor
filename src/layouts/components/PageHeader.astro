---
import CreditSelector from "@/layouts/function-components/CreditSelector.jsx";
---

<section class="page-header">
  <div class="page-header-bgimage_img"></div>
  <div class="row prt">
    <div class="col-12">
      <div class="page-header-container">
        <!--  -->
        <div class="page-header-image">
          <img src="/images/homehero.webp" class="page-header-image_img" />
          <div class="page-header-image_content">
            <h2 class="page-header-image_content_title">
              Impulsamos Tus Metas<br />
              <span>Los préstamos más rápidos del mercado</span>
            </h2>
          </div>
        </div>

        <div class="page-header-creditsimulator">
          <CreditSelector client:load />
          <div>
            <p class="page-header-image_content_description">
              Tu crédito confiable en minutos Para personas y negocios
            </p>
          </div>
        </div>
        <!--  -->
      </div>
    </div>
  </div>
</section>

<style>
  .page-header-container{
    position: relative;
    display: flex;
    justify-content: center;
    max-width: 1400px;
    margin: auto;
  }

  .page-header-image, .page-header-creditsimulator{
    width: 50%;
  }

  .page-header {
    position: relative;
    overflow: hidden;
    padding-top: 140px;
    padding-bottom: 40px;
  }
  .page-header-image {
    position: relative;
    width: 600px;
    margin: 0 auto;
  }

  .page-header-image_img {
    position: relative;
    width: 320px;
    bottom: -50px;
    margin: 0 auto;
    display: block;
  }

  .page-header-image_content {
    position: relative;
    border-radius: 31px;

    background: rgba(255, 255, 255, 0.3);
    -webkit-backdrop-filter: blur(8px);
    backdrop-filter: blur(30px);
    box-shadow: 0 6px 24px rgba(0, 0, 0, 0.08);
  }
  .page-header-image_content_title {
    font-size: 40px;
    font-weight: 700;
    color: #fff;
    text-shadow: 0px 3px 6px #00000029;
    text-align: center;
    padding: 20px;
    span {
      font-size: 22px;
      font-weight: 400;
      color: #fff;
      text-align: center;
      padding: 20px;
      text-shadow: 0px 3px 6px #00000029;
    }
  }
  .page-header-image_content_description {
    font-size: 30px;
    font-weight: 400;
    color: #fff;
    text-align: center;
    padding: 0 20px 20px 20px;
  }

  .prt {
    position: relative;
    z-index: 2;
  }

  .page-header-bgimage_img {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 100%;
    background-image: url("/images/figurebackground.webp");
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    z-index: 1;
  }

  @media (max-width: 768px) {
    .page-header-creditsimulator{
      width: 100%;
      margin-top: 40px ;
      padding: 0 20px;
    }

    .page-header-image_content_title {
      font-size: 30px;
    }
  }
</style>
